{
  "name": "litecrm",
  "version": "1.0.0",
  "description": "A comprehensive CRM system with customer management, invoicing, tasks, support tickets, webhooks, and RBAC",
  "main": "src/app/page.tsx",
  "scripts": {
    "setup": "node scripts/init-db.js",
    "dev": "nodemon server.js",
    "start": "npm run setup && npm run dev",
    "build": "next build",
    "prod": "npm run build && node server.js",
    "lint": "next lint",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "crm",
    "customer-management",
    "invoicing",
    "tasks",
    "support-tickets",
    "webhooks",
    "rbac",
    "nextjs",
    "mongodb",
    "typescript"
  ],
  "author": "LiteCRM Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/litecrm.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "src/**/*",
    "scripts/**/*",
    "public/**/*",
    ".env.example",
    "docker-compose.yml",
    "Dockerfile",
    "README.md"
  ],
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.536.0",
    "mongoose": "^8.17.0",
    "next": "15.4.5",
    "node-cron": "^4.2.1",
    "nodemon": "^3.0.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "^11.1.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
